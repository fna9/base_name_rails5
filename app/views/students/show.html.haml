.br
.page-header
  .h1=@student.last_name + ' ' + @student.first_name + ' ' + @student.second_name


  .row
    .col-md-8
 -#     %ul.thumbnails
 -#   %li.span4
 -#    %a.thumbnail{:href => "#"}
 -#     %img{:alt => "", "data-src" => "holder.js/300x200"}/
 -#   \...
      -if @student.avatar?
        =link_to show_photo_student_path(@student, type: :original), target: :_new do
          = image_tag get_photo_student_path(@student, type: :medium), alt: @student.last_name
      -else
        .li.text-danger
          Изображение не загружено!
          = link_to 'Загрузить изображение'


  .row
    .col-md-8
      %b Дата рождения:
      = l(@student.b_date.to_date)

    .col-md-8
      %b Номер паспорта:
      = @student.passport_id

    .col-md-8
      %b Серия паспорта:
      = @student.passport_series


%p
  %b Сообщества:
  %ul
    - @student.groups.each do |gr|
      %li
        = link_to gr.title, group_path(gr) 



= link_to edit_student_path(@student), class: "btn btn-warning" do
  =fa_icon "pencil"
  Редактировать
\|
= link_to students_path, class: "btn btn-primary" do
  =fa_icon "reply"
  Вернуться к списку студентов
