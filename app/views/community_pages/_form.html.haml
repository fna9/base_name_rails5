= form_for @community_page do |f|
  - if @community_page.errors.any?
    #error_explanation
      %h2= "#{pluralize(@community_page.errors.count, "Ошибка")} prohibited this community_page from being saved:"
      %ul
        - @community_page.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :page_id
    = f.text_field :page_id
  .field
    = f.label :community_id
    = f.text_field :community_id
  .field
    = f.label :ismain
    = f.select :ismain, [["Главная страница", 0], ["Обычная страница", 1], ["Новости", 2]]
    = f.error_messages_for(:ismain)
  .actions
    = f.submit 'Сохранить'
