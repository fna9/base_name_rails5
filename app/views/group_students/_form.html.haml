= form_for @group_student do |f|
  - if @group_student.errors.any?
    #error_explanation
      %h2= "#{pluralize(@group_student.errors.count, "error")} prohibited this group_student from being saved:"
      %ul
        - @group_student.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :group
    = f.text_field :group
  .field
    = f.label :student
    = f.text_field :student
  .actions
    = f.submit 'Save'
