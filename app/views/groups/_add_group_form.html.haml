= form_for @group, remote: true do |f|
  = hidden_field_tag('i', @i)
  - if @group.errors.any?
    = error_messages_for @group

  .row
    .col-md-8
      .form-group
        =f.label :title
        =f.text_field(:title, class: 'form-control', :placeholder => "Номер группы")

  .row
    .col-md-8
      .form-group
        =f.label :course
        =f.text_field(:course, class: 'form-control', :placeholder => "Курс")

  .row
    .col-md-8
      .form-group
        =f.label :semester
        =f.text_field(:semester, class: 'form-control', :placeholder => "Семестр")



  .actions
    = f.submit 'Внести в список'
