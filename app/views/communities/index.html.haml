%h1 Список сообществ

%table.table
  %thead
    %tr
      %th Название
      %th
      %th
      %th

  %tbody
    - @communities.each do |community|
      %tr
        %td= community.name
        %td= link_to 'Просмотр', community
        %td= link_to 'Редактировать', edit_community_path(community)
        %td= link_to 'Удалить', community, :method => :delete, :data => { :confirm => 'Вы уверены?' }

%br

= link_to 'Новое сообщество', new_community_path
