= form_for @page_subject do |f|
  - if @page_subject.errors.any?
    #error_explanation
      %h2= "#{pluralize(@page_subject.errors.count, "error")} prohibited this page_subject from being saved:"
      %ul
        - @page_subject.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :page
    = f.text_field :page
  .field
    = f.label :subject
    = f.text_field :subject
  .actions
    = f.submit 'Save'
