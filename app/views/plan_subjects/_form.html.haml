= form_for @plan_subject do |f|
  - if @plan_subject.errors.any?
    #error_explanation
      %h2= "#{pluralize(@plan_subject.errors.count, "error")} prohibited this plan_subject from being saved:"
      %ul
        - @plan_subject.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :plan
    = f.text_field :plan
  .field
    = f.label :subject
    = f.text_field :subject
  .actions
    = f.submit 'Save'
